<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bob.travelproject"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="22" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.wanderlust.travelproject.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.wanderlust.travelproject.TipCalculatorActivity"
            android:label="@string/title_activity_tip_calculator" >
        </activity>
        <activity
            android:name="com.wanderlust.travelproject.UnitConverterActivity"
            android:label="@string/title_activity_unit_converter" >
        </activity>
        <activity android:name="com.wanderlust.travelproject.TodayFragments" />
        <activity android:name="com.wanderlust.travelproject.TodayActivitiesNodeFragments" />
        <activity android:name="com.wanderlust.travelproject.TodayActivityFragments" />
        <activity
            android:name="com.wanderlust.travelproject.StartUpActivity"
            android:label="@string/title_activity_sign_up" >
        </activity>
        <activity
            android:name="com.wanderlust.travelproject.CurrentTripActivity"
            android:label="@string/title_activity_current_trips" >
        </activity>
        <activity
            android:name="com.wanderlust.travelproject.WeatherActivity"
            android:label="@string/title_activity_weather" >
        </activity>
        <activity
            android:name="com.wanderlust.travelproject.ItineraryActivity"
            android:label="@string/title_activity_itinerary" >
        </activity>
        <activity
            android:name="com.wanderlust.travelproject.TripActivity"
            android:label="@string/title_activity_trip" >
        </activity>
        <activity
            android:name="com.wanderlust.travelproject.CurrencyConverterActivity"
            android:label="@string/title_activity_currency_converter" >
        </activity>
        <activity
            android:name="com.wanderlust.travelproject.ToBeCreatedActivity"
            android:label="@string/title_activity_to_be_created" >
        </activity>
        <activity
            android:name="com.wanderlust.travelproject.SettingsActivity"
            android:label="@string/title_activity_settings_ativity" >
        </activity>
        <activity
            android:name="com.wanderlust.travelproject.AddItineraryActivity"
            android:label="@string/title_activity_add_itinerary" >
        </activity>
    </application>

</manifest>